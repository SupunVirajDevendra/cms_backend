{
  "info": {
    "name": "CMS API",
    "description": "Card Management System API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Card Requests",
      "item": [
        {
          "name": "Create Card Request",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/card-requests",
              "host": ["{{baseUrl}}"],
              "path": ["api", "card-requests"]
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"cardNumber\": \"4532123456789012\",\n    \"requestReasonCode\": \"ACTI\"\n}"
            }
          }
        },
        {
          "name": "Process Card Request (Approve)",
          "request": {
            "method": "PUT",
            "url": {
              "raw": "{{baseUrl}}/api/card-requests/1/process",
              "host": ["{{baseUrl}}"],
              "path": ["api", "card-requests", "1", "process"]
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"approve\": true\n}"
            }
          }
        },
        {
          "name": "Process Card Request (Reject)",
          "request": {
            "method": "PUT",
            "url": {
              "raw": "{{baseUrl}}/api/card-requests/1/process",
              "host": ["{{baseUrl}}"],
              "path": ["api", "card-requests", "1", "process"]
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"approve\": false\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Cards",
      "item": [
        {
          "name": "Get All Cards",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/cards",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cards"]
            }
          }
        },
        {
          "name": "Get Card By Number",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/cards/4532123456789012",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cards", "4532123456789012"]
            }
          }
        },
        {
          "name": "Create Card",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/cards",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cards"]
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"cardNumber\": \"4532123456789012\",\n    \"expiryDate\": \"2027-12-31\",\n    \"creditLimit\": 50000.00,\n    \"cashLimit\": 10000.00\n}"
            }
          }
        },
        {
          "name": "Update Card",
          "request": {
            "method": "PUT",
            "url": {
              "raw": "{{baseUrl}}/api/cards/4532123456789012",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cards", "4532123456789012"]
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"expiryDate\": \"2028-12-31\",\n    \"creditLimit\": 75000.00,\n    \"cashLimit\": 15000.00\n}"
            }
          }
        }
      ]
    }
  ]
}
