{
	"info": {
		"_postman_id": "cms-api-collection",
		"name": "CMS Card Management System API",
		"description": "Postman collection for CMS Card Management System endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Card Management",
			"item": [
				{
					"name": "Get All Cards",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/cards",
							"host": ["{{baseUrl}}"],
							"path": ["api", "cards"]
						},
						"description": "Retrieve all cards from the system"
					},
					"response": []
				},
				{
					"name": "Create New Card",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"cardNumber\": \"4333333333333333\",\n  \"expiryDate\": \"2028-12-31\",\n  \"creditLimit\": 150000.00,\n  \"cashLimit\": 75000.00\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/cards",
							"host": ["{{baseUrl}}"],
							"path": ["api", "cards"]
						},
						"description": "Create a new card in the system. The card will be created with 'IACT' (Inactive) status by default."
					},
					"response": []
				}
			],
			"description": "Endpoints for managing cards"
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"description": "Base URL for the CMS API"
		}
	]
}
